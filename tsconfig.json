{
  "include": ["src/**/*", "stories"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 0,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitThis": true,
    // "strict": true,
    "resolveJsonModule": true,
    "target": "ES2020", // we're using Babel
  },
}